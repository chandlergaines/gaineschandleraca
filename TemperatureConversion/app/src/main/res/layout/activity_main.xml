<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.chandler.android.aca.temperatureconversion.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Convert Temperature"
        android:id="@+id/textView"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/convert"
        android:id="@+id/calcButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/fahText"
        android:layout_below="@+id/textView"
        android:layout_marginTop="51dp"
        android:layout_alignRight="@+id/calcButton"
        android:layout_alignEnd="@+id/calcButton"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/celText"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/fahText"
        android:layout_alignStart="@+id/fahText"
        android:layout_alignRight="@+id/calcButton"
        android:layout_alignEnd="@+id/calcButton"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Celsius"
        android:id="@+id/textView2"
        android:layout_alignBottom="@+id/celText"
        android:layout_toRightOf="@+id/celText"
        android:layout_toEndOf="@+id/celText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Fahrenheit"
        android:id="@+id/textView3"
        android:layout_alignBottom="@+id/fahText"
        android:layout_toRightOf="@+id/fahText"
        android:layout_toEndOf="@+id/fahText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"

        android:id="@+id/outputText"
        android:layout_marginBottom="51dp"
        android:layout_above="@+id/calcButton"
        android:layout_alignLeft="@+id/celText"
        android:layout_alignStart="@+id/celText"
        android:textColor="@color/secondary_text_default_material_light"
        android:textIsSelectable="true"/>

</RelativeLayout>
