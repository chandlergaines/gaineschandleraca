<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.chandler.android.aca.comicbooks.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:id="@+id/textView"/>

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/titleInput"
        android:hint="Title"
        android:layout_marginTop="55dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/issueInput"
        android:hint="Issue"
        android:layout_below="@+id/titleInput"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/conditionInput"
        android:layout_below="@+id/issueInput"
        android:layout_alignLeft="@+id/issueInput"
        android:hint="Condition"
        android:layout_alignStart="@+id/issueInput"/>

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/priceInput"
        android:layout_below="@+id/conditionInput"
        android:layout_alignLeft="@+id/conditionInput"
        android:hint="Price"
        android:layout_alignStart="@+id/conditionInput"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/output"
        android:maxLines="1000"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/button"
        android:layout_below="@+id/priceInput"
        android:layout_alignRight="@+id/priceInput"
        android:layout_alignEnd="@+id/priceInput"
        android:layout_marginRight="36dp"
        android:layout_marginEnd="36dp"
        />
</RelativeLayout>
